package patterns;

import java.util.Scanner;

public class pattern6 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int i = 1;
		while(i<=n) {
			int space = 1;
			while(space<=n-i) {
				System.out.print(" ");
				space++;
			}
			int j = 1;
			while(j<=i) {
				System.out.print("*");
				j++;
			}
//			int k = 1;
//			while() {
//				
//			}
			i++;
			System.out.println();
			

	}
	}
}
