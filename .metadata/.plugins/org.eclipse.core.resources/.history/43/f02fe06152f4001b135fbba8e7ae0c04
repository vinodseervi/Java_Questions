package patterns;

import java.util.Scanner;

public class pattern3 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int num = 1;
		int i = 1;
		while(i<=n) {
			int space=1;
			while(space <= n - i) {
				System.out.print("  ");
				space++;
			}
			int j = 1;
			while(j<=i) {
				System.out.print(num+" ");
				j++;
				num++;
			}
			System.out.println();
			i++;
		}
		

	}

}
